<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <h1>Inventory Management System</h1>
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>List of Items</h2>
            <a href="/items/new" class="btn btn-primary">Add Item</a>
        </div>

        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% items.forEach((item, index) => { %>
                    <tr>
                        <td><%= item.name %></td>
                        <td><%= item.category %></td>
                        <td><%= item.quantity %></td>
                        <td>â‚±<%= item.price.toFixed(2) %></td>
                        <td><%= item.description %></td>
                        <td>
                            <% const date = new Date(item.createdAt); %>
                            <% const formattedDate = `${date.getMonth() + 1}/${date.getDate()}/${date.getFullYear()}`; %>
                            <%= formattedDate %>
                        </td>
                        <td>
                            <a href="/items/<%= item._id %>" class="btn btn-sm btn-info text-white">View</a>
                            <a href="/items/<%= item._id %>/edit" class="btn btn-sm btn-warning text-dark">Update</a>
                            <form action="/items/<%= item._id %>?_method=DELETE" method="POST" style="display: inline;">
                                <button type="submit" class="btn btn-sm btn-danger text-white">Delete</button>
                            </form>
                        </td>                        
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>
